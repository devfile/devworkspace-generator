{
    "compilerOptions": {
        "target": "ES2023",
        "module": "commonjs",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "lib": [
            "ES2023",
        ],
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "lib",
        "types": [
            "node", "jest", "reflect-metadata"
        ],
        "moduleResolution": "node",
        "resolveJsonModule": true,
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
    ]
}
